{
  "name": "cod3x-recon",
  "version": "1.0.0",
  "description": "Context-Aware Subdomain Enumerator with intelligent classification and Nuclei integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "cod3x": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && [ -f dist/cli/index.js ] && chmod +x dist/cli/index.js",
    "start": "node dist/cli/index.js",
    "dev": "tsx watch src/cli/index.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "npm run build"
  },
  "keywords": [
    "subdomain",
    "enumeration",
    "recon",
    "security",
    "pentesting",
    "nuclei"
  ],
  "author": "COD3X Security Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "figlet": "^1.9.4",
    "gradient-string": "^3.0.0",
    "lru-cache": "^10.1.0",
    "p-limit": "^5.0.0",
    "undici": "^6.2.1"
  },
  "devDependencies": {
    "@types/estree": "^1.0.8",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^4.9.5",
    "vitest": "^4.0.14"
  }
}
